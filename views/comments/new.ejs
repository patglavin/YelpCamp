<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align:center;">Add New Comment to <%= campground.name %></h1>
        <div style="width: 30%; margin: 40px auto;">
            <form action="/campgrounds/<%= campground._id %>/comments" method="post">
                <div class="form-group">
                    <input name="comment[text]" type="text" placeholder="text" class="form-control">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-default btn-block btn-primary">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back to Campgrounds</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>