<% include ../partials/header %>


<div class="container">
    <div class="row">
        <h1 style="text-align:center;">Create a New Campground</h1>
        <div style="width: 30%; margin: 40px auto;">
            <form action="/campgrounds" method="post">
                <div class="form-group">
                    <input name="name" type="text" placeholder="name" class="form-control">
                </div>
                <div class="form-group">
                    <input name="price" type="number" placeholder="price per night" class="form-control" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <input name="image" type="image url" placeholder="image url" class="form-control">
                </div>
                <div class="form-group">
                    <input name="description" type="text" placeholder="description" class="form-control">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-default btn-block btn-primary">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back to Campgrounds</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>